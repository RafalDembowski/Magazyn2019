@{ 
    if (Session["ActiveUserId"] == null)
    {
        Response.Redirect("~/");
    }
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/Content/Style/style.css" />
    <link href='https://fonts.googleapis.com/css?family=Open Sans' rel='stylesheet'>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
    <script src="https://kit.fontawesome.com/b1173e0201.js"></script>
    <script src="~/Scripts/Logout.js"></script>

</head>
<body style="background: url(/Content/Img/slide.jpg) no-repeat center center fixed; background-position: 50% 65%;">
    <section class="main-login">
        <header class="header">

            <div class="logo">
                <img src="/Content/Img/logo.png" height="80" />
            </div>

            <div class="profile-user">
                <img src="/Content/Img/avatar.png" height="40"/>
                <div class="profile-user-inf">
                    <span class="name"><strong>@Session["ActiveUserFullName"]</strong></span>
                    <span class="role"><strong>@Session["ActiveUserPosition"]</strong></span>
                </div>
            </div>
        </header>
        <ul>
            <li><a id="warehouse-menu" href="@Url.Action("Index","HomePage")"><i class="fas fa-warehouse"></i>MAGAZYNY</a></li>
            <li><a id="customer-menu" href="@Url.Action("Index","Customer")"><i class="fas fa-user mr-2"></i>KONTRAHENCHI</a></li>
            <li><a id="group-menu" href="@Url.Action("Index","Group")"><i class="fas fa-folder mr-2"></i>GRUPY</a></li>
            <li><a id="product-menu" href="@Url.Action("Index","Product")"><i class="fas fa-shopping-cart mr-2"></i>PRODUKTY</a></li>
            <li><a id="states-menu" href="@Url.Action("Index","States")"><i class="fas fa-list mr-2"></i>STANY</a></li>
            <li><a id="documents-menu" href="@Url.Action("Index","Documents")"><i class="fas fa-file mr-2"></i>DOKUMENTY</a></li>
            <li><a href="@Url.Action("Logout","Home")">WYLOGUJ SIĘ<i class="fa fa-power-off ml-2"></i></a></li>
        </ul>
        <section class="main-content">
            @RenderBody()
        </section>
    </section>
</body>
</html>
