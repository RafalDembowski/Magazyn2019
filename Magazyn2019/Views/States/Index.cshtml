    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<br />
<br />

<div class="card-menu">
    <button onclick="location.href='@Url.Action("Index", "Movement", new { id = 1})'"> <i class="fas fa-arrow-circle-down mr-2"></i> nowe przyjęcie</button>
    <button onclick="location.href='@Url.Action("Index", "Movement", new { id = 2})'"> <i class="fas fa-arrow-circle-up mr-2"></i> nowe wydanie</button>
