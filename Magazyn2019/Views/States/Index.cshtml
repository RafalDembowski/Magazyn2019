<div class="card">

    <div class="card-header">
        <h2>Filtrowanie</h2>
    </div>
    <div class="card-body">
        <div class="container-states">
            <div>
                <label>Magazyn</label>
                <select class="form-control" name="sort" id="warehouses-filter">
                    <option value=""></option>
                </select>
            </div>
            <div>
                <label>Produkt</label>
                <select class="form-control" name="sort" id="products-filter">
                    <option value=""></option>
                </select>
            </div>
        </div>
    </div>

</div>

<div class="card">

    <div class="card-header">
        <h2>Lista produktów</h2>
    </div>
    <div class="card-body">
        <table id="inventories-table">
            <thead>
                <tr>
                    <th></th>
                    <th>Nazwa produktu</th>
                    <th>Kod produktu</th>
                    <th>Grupa</th>
                    <th>Opis</th>
                    <th>Jednostka</th>
                    <th>Ilość</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
        <h3 id="no-items-information">Brak wpisów w bazie danych.</h3>
    </div>

</div>

